# Voice Auth API Environment Variables
# Copy this to .env and customize

# Whisper Model: tiny (39MB), base (74MB), small (244MB)
WHISPER_MODEL=tiny

# ECAPA-TDNN Speaker Threshold
SPEAKER_THRESHOLD=0.65

# API Port
PORT=8000

# CORS (comma-separated origins, or * for all)
CORS_ORIGINS=*

# Optional API Key (leave empty for no auth)
API_KEY=

# Rate limit per minute
RATE_LIMIT=100
